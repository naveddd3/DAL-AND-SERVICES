<style>
    label {
        font-weight: 600;
        color: #666;
    }

    body {
        background: #f1f1f1;
    }

    .box8 {
        box-shadow: 0px 0px 5px 1px #999;
    }

    .mx-t3 {
        margin-top: -3rem;
    }
</style>
<div class="container mt-3">

    <div class="row jumbotron box8">
        <div class="col-sm-12 mx-t3 mb-4">
            <h2 class="text-center text-info">FEE GROUP</h2>
        </div>
        <div class="col-sm-6 form-group">
            <label for="gn">Group Name</label>
            <input type="text" class="form-control" name="GroupName" id="gn" placeholder="Group Name" required>
        </div>
        <div class="col-sm-6 form-group">
            <label for="Description">Description</label>
            <input type="text" class="form-control" name="Description" id="Description" placeholder="Description" required>
        </div>
        <div class="col-sm-6 form-group">
            <label for="FromClass">From Class</label>
            <input type="text" class="form-control" name="Fromc" id="FromClass" placeholder="From Class" required>
        </div>
        <div class="col-sm-6 form-group">
            <label for="ToClass">To Class</label>
            <input type="text" class="form-control" name="ToClass" id="ToClass" placeholder="T Class" required>
        </div>

       

        <div class="col-sm-12 form-group mb-0">
            <button class="btn btn-primary float-right" id="save">Submit</button>
        </div>

    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
           $("#save").click(function(){
               let param ={
                   GroupName : $("#gn").val(),
                    Description: $("#Description").val(),
                    FromClass: $("#FromClass").val(),
                    ToClass: $("#ToClass").val()
               };
               $.post('/FeeGroup/Addfeeg',param).done(function(result){
                   alert("FEE GROUP ADDED");
                   window.location.href="/FeeGroup/FeeGroupList";

               })
               .fail(function(){
                   alert("ERROR");
               })
           })
        })
    </script>
}